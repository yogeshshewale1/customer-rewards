import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';
import { AdvertisementService } from '../../services/advertisement.service';

@Component({
  selector: 'app-advertisement-form',
  standalone: true,
  imports: [CommonModule, FormsModule],
  template: `
    <div class="card">
      <h3>Add Advertisement</h3>

      <input placeholder="Title"
             [(ngModel)]="model.title" />

      <input placeholder="Name"
             [(ngModel)]="model.name" />

      <select [(ngModel)]="model.category">
        <option value="">Select Category</option>
        <option *ngFor="let c of categories">{{ c }}</option>
      </select>

      <textarea placeholder="Description"
                [(ngModel)]="model.description"></textarea>

      <button (click)="add()"
              [disabled]="!isValid()">
        Add Advertisement
      </button>
    </div>
  `,
  styles: [`
    .card {
      width: 350px;
      padding: 15px;
      border: 1px solid #ccc;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    input, select, textarea {
      width: 100%;
      margin: 6px 0;
      padding: 6px;
    }
    button {
      width: 100%;
      padding: 8px;
      background: #1976d2;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:disabled {
      background: gray;
    }
  `]
})
export class AdvertisementFormComponent {
  categories = ['Furniture', 'Hardware', 'Mobile'];

  model: any = {
    name: 'Yogesh Shewale'
  };

  constructor(private service: AdvertisementService) {}

  isValid() {
    return this.model.title &&
           this.model.name &&
           this.model.category;
  }

  add() {
    this.service.add({ ...this.model });
    this.model = { name: 'Yogesh Shewale' };
  }
}
