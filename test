import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

interface Restaurant {
  name: string;
  location: string;
}

@Component({
  selector: 'app-restaurant',
  standalone: true,
  imports: [CommonModule, FormsModule],
  template: `
    <h2>Restaurant Management</h2>

    <!-- Add / Edit Form -->
    <div style="margin-bottom:15px">
      <input
        type="text"
        placeholder="Restaurant Name"
        [(ngModel)]="restaurantForm.name"
      />

      <input
        type="text"
        placeholder="Location"
        [(ngModel)]="restaurantForm.location"
      />

      <button (click)="saveRestaurant()">
        {{ editingIndex === -1 ? 'Add Restaurant' : 'Update Restaurant' }}
      </button>

      <button *ngIf="editingIndex !== -1" (click)="cancelEdit()">
        Cancel
      </button>
    </div>

    <!-- Restaurant Table -->
    <table border="1" width="60%">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <tr *ngFor="let restaurant of restaurants; let i = index">
        <td>{{ restaurant.name }}</td>
        <td>{{ restaurant.location }}</td>
        <td>
          <button (click)="editRestaurant(i)">Edit</button>
          <button (click)="deleteRestaurant(i)">Delete</button>
        </td>
      </tr>
    </table>
  `
})
export class RestaurantComponent {
  restaurants: Restaurant[] = [
    { name: 'Food Hub', location: 'Mumbai' },
    { name: 'Spice Villa', location: 'Pune' }
  ];

  restaurantForm: Restaurant = { name: '', location: '' };
  editingIndex = -1;

  saveRestaurant() {
    if (!this.restaurantForm.name || !this.restaurantForm.location) {
      alert('Enter valid restaurant details');
      return;
    }

    if (this.editingIndex === -1) {
      // ADD
      this.restaurants.push({ ...this.restaurantForm });
    } else {
      // UPDATE
      this.restaurants[this.editingIndex] = { ...this.restaurantForm };
      this.editingIndex = -1;
    }

    this.restaurantForm = { name: '', location: '' };
  }

  editRestaurant(index: number) {
    this.restaurantForm = { ...this.restaurants[index] };
    this.editingIndex = index;
  }

  deleteRestaurant(index: number) {
    if (confirm('Are you sure?')) {
      this.restaurants.splice(index, 1);
    }
  }

  cancelEdit() {
    this.restaurantForm = { name: '', location: '' };
    this.editingIndex = -1;
  }
}
